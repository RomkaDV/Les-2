// Задача 13: Напишите программу, которая выводит треть цифру заданного числа или сообщает, что других цифр нет.
// 645 -> 5
// 78 -> других цифр нет
// 32679 -> 6


Console.Write("Введите число: ");
int anyNumber = Convert.ToInt32(Console.ReadLine());
string anyNumberText = Convert.ToString(anyNumber);
if (anyNumberText.Length > 2){
  Console.WriteLine("третья цифра -> " + anyNumberText[2]);
}
else {
  Console.WriteLine("-> первых цифр нет");
}



//Задача 15: Напишите программу, которая принимает на вход цифру, загружающую день недели, и включает, является ли этот день выходным.
// 6 -> да
// 7 -> да
// 1 -> не

Console.Write("Введи цифру, закрывающую день недели: ");
int dayNumber = Convert.ToInt32(Console.ReadLine());

void CheckingTheDayOfTheWeek (int dayNumber) {
 if (dayNumber == 6 || dayNumber == 7) {
  Console.WriteLine("(этот день выходной) -> да");
  }
  else if (dayNumber < 1 || dayNumber > 7) {
    Console.WriteLine("это вообще не день недели");
  }
  else Console.WriteLine("(этот день не выходной) -> нет");
}

